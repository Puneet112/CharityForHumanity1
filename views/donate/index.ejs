<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-lg-6 container text-white p-5">
        <div class="container4">
            <h3 class="text-center" style="color: #218838;">Your help can Save a life</h3>
        </div>
        <div class="container pt-3">
            <form name="myForm" action="/donate/paystack/pay" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="full_name" placeholder="Full Name"/>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email"/>
                </div>
                <div class="form-group">
                    <input type="int" class="form-control" name="amount" placeholder="Amount"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success form-control">DONATE</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>