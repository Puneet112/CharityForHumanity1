<% include partials/header %>

<div class="contact"> 
    <div class="container">  
        <form>   
            <div class="row" style="margin-top: 15px;">    
                <div class="col-lg-4 col-md-4 col-sm-12">      
                    <h1 style="color:#007bff; margin-top: 50%;"><strong><i class="fas fa-envelope-open-text"></i> Get in Touch</strong></h1>    
                </div>    
                <div class="col-lg-8 col-md-8 col-sm-12 right">
                    <form action="/contact" method="POST" >
                        <div class="form-group">
                            <input type="text" class="form-control form-control-lg" placeholder="Your Name" name="name" required>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control form-control-lg" placeholder="YourEmail@email.com" name="email" required>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control form-control-lg" name="message" rows="8" required></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" formmethod="post" formaction="/contact" class="btn btn-lg btn-primary btn-block">Send</button>
                        </div>
                    </form>       
                    
                    <a href="/charities" class="btn btn-outline-secondary" style="margin-top: 10px;">Go Back</a>
                </div>   
            </div>  
        </form> 
    </div>
</div>

<% include partials/footer %>